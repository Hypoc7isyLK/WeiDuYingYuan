<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_186"
        android:src="@mipmap/homebg"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/dingwei"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:padding="@dimen/dp_15"
            android:src="@mipmap/com_icon_loc_white_default"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="北京"
            android:textSize="@dimen/sp_14"
            android:layout_toRightOf="@id/dingwei"
            android:layout_centerVertical="true"/>

        <ImageView
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:padding="@dimen/dp_2"
            android:layout_marginRight="@dimen/dp_16"
            android:src="@mipmap/com_icon_search_default"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>


    </RelativeLayout>

    <recycler.coverflow.RecyclerCoverFlow
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_223"
        android:layout_marginTop="@dimen/dp_65"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24">

    </recycler.coverflow.RecyclerCoverFlow>








</RelativeLayout>