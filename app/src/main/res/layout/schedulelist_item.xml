<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sele_circular">

        <TextView
            android:id="@+id/quanjing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="#666666"
            android:text="中国I Do巨幕全景声听"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"/>

        <RelativeLayout
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_below="@id/quanjing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10">

            <TextView
                android:id="@+id/begin_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_19"
                android:text="88:88"
                android:textColor="#333333"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_5"/>

            <TextView
                android:id="@+id/gang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="——"
                android:layout_toRightOf="@id/begin_time"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_5"/>

            <TextView
                android:id="@+id/end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_18"
                android:text="88:88"
                android:layout_toRightOf="@id/gang"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_5"/>

            <TextView
                android:id="@+id/end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="end"
                android:layout_toRightOf="@id/end_time"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_5"/>

        </RelativeLayout>

        <ImageView
            android:id="@+id/next"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@mipmap/com_icon_next_default"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"/>

        <TextView
            android:id="@+id/price"
            android:layout_toLeftOf="@id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="@dimen/sp_30"
            android:text="53.9"
            android:textColor="#000000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/yang"
            android:text="￥"
            android:textSize="@dimen/sp_25"
            android:textColor="#000000"
            android:layout_toLeftOf="@id/price"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_5"/>




    </RelativeLayout>

</RelativeLayout>