<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp">

        <com.facebook.drawee.view.SimpleDraweeView
            app:roundedCornerRadius="@dimen/dp_8"
            android:id="@+id/recycler_movie_simp"
            android:layout_width="@dimen/dp_126"
            android:layout_height="@dimen/dp_164"/>


        <RelativeLayout
            android:layout_width="@dimen/dp_126"
            android:layout_height="@dimen/dp_40"
            android:background="@drawable/carousel"
            android:layout_alignBottom="@+id/recycler_movie_simp"
            android:layout_alignParentStart="true">

            <TextView
                android:id="@+id/xian"
                android:layout_width="@dimen/dp_3"
                android:layout_height="@dimen/dp_18"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/moviefragment_shu" />

            <TextView
                android:id="@+id/recycler_movie_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/xian"
                android:text="阿萨德的"
                android:layout_marginRight="@dimen/dp_10"
                android:textSize="@dimen/sp_14"
                android:textColor="#ffffff" />

        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>