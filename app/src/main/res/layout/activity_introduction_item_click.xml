<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <ImageView
        android:id="@+id/introd_image"
        android:layout_width="@dimen/dp_205"
        android:layout_height="@dimen/dp_205"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/coverage4"
        android:layout_marginTop="@dimen/dp_150"/>
    <TextView
        android:id="@+id/introd_textTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_60"
        android:layout_below="@+id/introd_image"
        android:textColor="#333333"
        android:textSize="@dimen/sp_14"
        android:text="八维移动通信学院作品"/>
    <TextView
        android:id="@+id/introd_textBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_21"
        android:layout_below="@+id/introd_textTop"
        android:textColor="#333333"
        android:textSize="@dimen/sp_14"
        android:text="带你开启一段美好的电影之旅"/>


</RelativeLayout>