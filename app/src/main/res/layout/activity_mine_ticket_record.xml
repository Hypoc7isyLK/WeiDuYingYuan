<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/dp_10"
    android:background="@drawable/sele_circular"
    android:padding="@dimen/dp_10">

    <RelativeLayout
        android:id="@+id/rela"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_5">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="特写"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/colorTextColor"
            android:padding="@dimen/dp_5"/>
        <Button
            android:id="@+id/payment"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_30"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_12"
            android:layout_alignParentRight="true"
            android:background="@drawable/sele_btn_color_small"
            android:text="去付款"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:orientation="vertical"
        android:layout_below="@+id/rela">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_5"
            android:padding="@dimen/dp_5">

            <TextView
                android:id="@+id/indent_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/common"
                android:textSize="@dimen/sp_12"
                android:text="订单号："/>
            <TextView
                android:id="@+id/indent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/indent_text"
                android:textColor="@color/common"
                android:textSize="@dimen/sp_12"
                android:text="1254635251556"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_5"
            android:padding="@dimen/dp_5">

            <TextView
                android:id="@+id/theatre_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/common"
                android:textSize="@dimen/sp_12"
                android:text="影院："/>
            <TextView
                android:id="@+id/theatre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/theatre_text"
                android:textColor="@color/common"
                android:textSize="@dimen/sp_12"
                android:text="1254635251556"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_5"
            android:padding="@dimen/dp_5">

            <TextView
                android:id="@+id/hall_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/common"
                android:textSize="@dimen/sp_12"
                android:text="影厅："/>
            <TextView
                android:id="@+id/hall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/hall_text"
                android:textColor="@color/common"
                android:textSize="@dimen/sp_12"
                android:text="1254635251556"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_5"
            android:padding="@dimen/dp_5">

            <TextView
                android:id="@+id/time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/common"
                android:textSize="@dimen/sp_12"
                android:text="时间："/>
            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/time_text"
                android:textColor="@color/common"
                android:textSize="@dimen/sp_12"
                android:text="1254635251556"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_5"
            android:padding="@dimen/dp_5">

            <TextView
                android:id="@+id/amount_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/common"
                android:textSize="@dimen/sp_12"
                android:text="数量："/>
            <TextView
                android:id="@+id/amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/amount_text"
                android:textColor="@color/common"
                android:textSize="@dimen/sp_12"
                android:text="1254635251556"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_5"
            android:padding="@dimen/dp_5">

            <TextView
                android:id="@+id/money_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/common"
                android:textSize="@dimen/sp_12"
                android:text="金额："/>
            <TextView
                android:id="@+id/money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/money_text"
                android:textColor="@color/common"
                android:textSize="@dimen/sp_12"
                android:text="1254635251556"/>

        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>



