<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bbitmap"
    tools:context=".activity.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_300"
        android:layout_marginTop="@dimen/dp_120"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginRight="@dimen/dp_36">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50">

            <ImageView
                android:id="@+id/ppp"
                android:layout_width="@dimen/dp_17"
                android:layout_height="@dimen/dp_27"
                android:src="@mipmap/register_icon_name_default"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"/>

            <EditText
                android:id="@+id/edittext_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_toRightOf="@+id/ppp"
                android:layout_marginLeft="20dp"
                android:hint="昵称"
                android:textSize="@dimen/sp_18"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:layout_centerVertical="true"
                android:background="@null"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#6666"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50">

            <ImageView
                android:id="@+id/ppp1"
                android:layout_width="@dimen/dp_17"
                android:layout_height="@dimen/dp_27"
                android:src="@mipmap/register_icon_sex_default"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"/>

            <EditText
                android:id="@+id/edittext_gender"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_toRightOf="@+id/ppp1"
                android:layout_marginLeft="20dp"
                android:hint="性别"
                android:textSize="@dimen/sp_18"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:layout_centerVertical="true"
                android:background="@null"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#6666"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50">

            <ImageView
                android:id="@+id/ppp2"
                android:layout_width="@dimen/dp_17"
                android:layout_height="@dimen/dp_27"
                android:src="@mipmap/register_icon_date_default"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"/>

            <EditText
                android:id="@+id/edittext_data"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_toRightOf="@+id/ppp2"
                android:layout_marginLeft="20dp"
                android:hint="出生日期"
                android:textSize="@dimen/sp_18"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:layout_centerVertical="true"
                android:background="@null"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#6666"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50">

            <ImageView
                android:id="@+id/ppp3"
                android:layout_width="@dimen/dp_17"
                android:layout_height="@dimen/dp_27"
                android:src="@mipmap/register_icon_phone_default"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"/>

            <EditText
                android:inputType="number"
                android:id="@+id/edittext_phone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_toRightOf="@+id/ppp3"
                android:layout_marginLeft="20dp"
                android:hint="手机号"
                android:textSize="@dimen/sp_18"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:layout_centerVertical="true"
                android:background="@null"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#6666"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50">

            <ImageView
                android:id="@+id/ppp4"
                android:layout_width="@dimen/dp_17"
                android:layout_height="@dimen/dp_27"
                android:src="@mipmap/register_icon_mail_default"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"/>

            <EditText
                android:id="@+id/edittext_email"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_toRightOf="@+id/ppp4"
                android:layout_marginLeft="20dp"
                android:hint="邮箱"
                android:textSize="@dimen/sp_18"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:layout_centerVertical="true"
                android:background="@null"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#6666"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50">

            <ImageView
                android:id="@+id/ppp5"
                android:layout_width="@dimen/dp_17"
                android:layout_height="@dimen/dp_27"
                android:src="@mipmap/register_icon_lock_default"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"/>

            <EditText
                android:id="@+id/edittext_login"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_toRightOf="@+id/ppp5"
                android:layout_marginLeft="20dp"
                android:hint="登陆密码"
                android:textSize="@dimen/sp_18"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:layout_centerVertical="true"
                android:background="@null"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#6666"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>

    </LinearLayout>
    <Button
        android:id="@+id/button_register"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:text="注册"
        android:textSize="@dimen/sp_18"
        android:textColor="#ffffff"
        android:background="@drawable/sele_btn_color"
        android:layout_marginRight="@dimen/dp_36"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/sss"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_90"

        />


</RelativeLayout>