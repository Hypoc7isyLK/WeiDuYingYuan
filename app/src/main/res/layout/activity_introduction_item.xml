<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/introd_image"
        android:layout_width="@dimen/dp_205"
        android:layout_height="@dimen/dp_205"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_launcher_background"
        android:layout_marginTop="@dimen/dp_150"/>
    <TextView
        android:id="@+id/introd_textTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_60"
        android:layout_below="@+id/introd_image"
        android:textColor="#333333"
        android:textSize="@dimen/sp_14"
        android:text="一场电影"/>
    <TextView
        android:id="@+id/introd_textBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_21"
        android:layout_below="@+id/introd_textTop"
        android:textColor="#333333"
        android:textSize="@dimen/sp_14"
        android:text="荡涤你的心灵"/>


</RelativeLayout>