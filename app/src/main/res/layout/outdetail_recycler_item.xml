<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/zxc"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_123"
            android:background="@mipmap/detailsbg"/>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/details_simple"
            app:roundedCornerRadius="@dimen/dp_8"
            android:layout_width="@dimen/dp_103"
            android:layout_height="@dimen/dp_129"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"/>

        <TextView
            android:id="@+id/details_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/zxc"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/details_simple"
            android:text="铁血战士"
            android:textColor="#FFFFFF"
            android:layout_margin="@dimen/dp_10"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/details_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_below="@id/details_title"
            android:layout_toRightOf="@id/details_simple"
            android:text="阿克苏觉得好受"
            android:textSize="@dimen/sp_12"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:maxLines="5"
            android:ellipsize="end"/>

        <ImageView
            android:id="@+id/xiaoxinxin"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:padding="@dimen/dp_4"
            android:src="@mipmap/com_icon_collection_default"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/zxc"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_6"/>

    </RelativeLayout>


</RelativeLayout>