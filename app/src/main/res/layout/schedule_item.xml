<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/tools">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/carousel_simple"
        app:roundedCornerRadius="@dimen/dp_8"
        android:layout_width="@dimen/dp_158"
        android:layout_height="@dimen/dp_223"
        app:placeholderImage="@mipmap/bbitmap"/>

    <RelativeLayout
        android:layout_width="@dimen/dp_158"
        android:layout_height="@dimen/dp_34"
        android:layout_alignBottom="@+id/carousel_simple"
        android:layout_alignParentStart="true"
        android:background="@drawable/carousel">

        <TextView
            android:id="@+id/move_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="阿萨德的奥术大师"
            android:textSize="@dimen/sp_14"
            android:textColor="#ffffff"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_58"/>

        <TextView
            android:id="@+id/move_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="102分钟"
            android:textSize="@dimen/sp_12"
            android:textColor="#ffffff"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_5"/>



    </RelativeLayout>




</RelativeLayout>