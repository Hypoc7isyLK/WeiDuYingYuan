<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 灰色阴影 -->
    <item>
        <shape android:shape="rectangle">
            <gradient android:centerColor="#22440a33"
                android:type="linear"
                android:angle="180"
                android:endColor="#11440a33"
                android:startColor="#33440a33"/>
            <corners android:radius="@dimen/dp_5" />
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle" >
            <solid android:color="@color/white"/>
            <corners android:radius="@dimen/dp_5"/>
        </shape>

    </item>
</layer-list>